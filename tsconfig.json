{
  // https://v3.nuxtjs.org/concepts/typescript
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "importHelpers": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": true,
    "incremental": true, // faster compile
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "diagnostics": false,
    "outDir": "./dist",
    "plugins": [
      {
        "name": "@vuedx/typescript-plugin-vue"
      }
    ],
  },
  "exclude": [
    "node_modules",
    "src/components/dropdown",
  ]
}
